<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/live_fullepg_timeline_30min_width"
    android:layout_height="48dp" >

    <TextView
        android:id="@+id/live_timeline_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/live_fullepg_timeline_margin_top"
        android:textColor="@color/live_fullepg_timeline_weekday_textcolor"
        android:textSize="@dimen/live_fullepg_timeline_fontsize" />

    <TextView
        android:id="@+id/live_timeline_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/live_timeline_date"
        android:layout_marginTop="@dimen/live_fullepg_timeline_time_margin_top"
        android:textColor="@color/live_fullepg_timeline_textcolor"
        android:textSize="@dimen/live_fullepg_timeline_fontsize" />

</RelativeLayout>